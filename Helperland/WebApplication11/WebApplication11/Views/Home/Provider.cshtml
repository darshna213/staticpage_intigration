
@{
    ViewData["Title"] = "Provider";
}
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icon CDN LInk -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">


    <!-- External CSS File -->
    <link href="~/css/Provider.css" rel="stylesheet" />
    <title>provider</title>
</head>

<body>
    <section id="nav_section" class="nav_section">
        <!--navbar code start-->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" >
                    <img src="~/IMAGES/logo.png" alt="Logo">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    
                    <img src="~/IMAGES/list.svg" alt="List" width="50px" height="50px">
                </button>

                <div class="collapse navbar-collapse ms-auto collapse show" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white" style="padding-left: 15px;padding-right: 15px;"
                               asp-action="Book_service">Book a Cleaner</a>
                        </li>
                        <li class="nav-item" id="nav-item">
                            <a class="nav-link" asp-action="Price">Prices</a>
                        </li>
                        <li class="nav-item" id="nav-item">
                            <a class="nav-link" href="#">Our Guarantee</a>
                        </li>
                        <li class="nav-item" id="nav-item">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                        <li class="nav-item" id="nav-item">
                            <a class="nav-link" asp-action="Contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white" style="padding-left: 20px;padding-right: 20px;"
                               href="#">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white" style="padding-left: 15px;padding-right: 15px;"
                               asp-action="provider">Become a Helper</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <img src="~/IMAGES/ic-flag.png" alt="Flag">
                                <i class="bi bi-chevron-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-action="provider"><img src="~/IMAGES/ic-flag.png" alt=""> USA</a></li>
                                <li><a class="dropdown-item" asp-action="provider"><img src="~/IMAGES/ic-flag.png" alt="">CANADA</a></li>
                                <li><a class="dropdown-item" asp-action="provider"><img src="~/IMAGES/ic-flag.png" alt="">INDIA</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--navbar code end-->
        <!--registration code start-->
        <div class="container d-flex align-items-center justify-content-center registerNow">
            <form>
                <h2 class="text-center">Register Now!</h2>
                <input class="form-control" type="text" name="fname" id="fname" placeholder="First Name">
                <input class="form-control" type="text" name="lname" id="lname" placeholder="Last Name">
                <input class="form-control" type="email" name="Email" id="Email" placeholder="Email Address">
                <div class="input-group mx-0 row">
                    <input type="text" class="form-control input-group-text col-2 px-0" id="countryCode" placeholder="+91">
                    <input type="text" name="phone" id="phone" class="form-control col-10" placeholder="Phone Number">
                </div>
                <input class="form-control" type="password" name="password" id="password" placeholder="Password">
                <input class="form-control" type="password" name="cpassword" id="cpassword" placeholder="Confirm Password">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="sendNewsletter">
                    <label class="form-check-label" for="sendNewsletter">Send me newsletters from Helperland</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="Terms">
                    <label class="form-check-label" for="acceptTerms">
                        I accept <a href="#">terms and conditions</a> &amp; <a href="#">privacy policy</a>
                    </label>
                </div>
                <div id="robot-captcha">
                    <img src="~/IMAGES/checkbox-robot.png" alt="">

                </div>
                <button class="started rounded-pill m-auto d-flex align-items-center justify-content-center">
                    <span>Get Started &nbsp;</span>
                    <img src="~/IMAGES/right arrow-white.png" alt="" />
                </button>
            </form>
        </div>

        <div class="text-center down-arrow">
            <a href="#registration-work">
                <img src="~/IMAGES/down.png" alt="down-arrow" />
            </a>
        </div>
        <!--registration code end-->
    </section>

    <!--registration work code start-->
    <section class="registration-work container-fluid" id="registration-work">
        <img id="blog-left" src="~/IMAGES/blog-left-bg.png" alt="left-blog">
        <img id="blog-right" src="~/IMAGES/blog-right-bg.png" alt="right-blog">
        <h2 class="text-center">
            How it works
        </h2>

        <div class="container-fluid d-flex justify-content-center align-items-center flex-column registration-terms">
            <!--term1 start-->
            <div class="row d-flex justify-content-center align-items-center r-term">
                <div class="col-md-6 term-detail">
                    <h3 class=" justify-content-center justify-content-md-start align-items-center d-flex term-heading">
                        Register yourself
                    </h3>
                    <p class="justify-content-center justify-content-md-start align-items-center d-flex term-text">
                        Provide your basic information to register
                        yourself as a service provider.
                    </p>
                    <a href="#" class="justify-content-center justify-content-md-start align-items-center d-flex readmore">
                        Read More &nbsp; <img src="~/IMAGES/right arrow-black.png" alt="">
                    </a>
                </div>
                <div class="col-md-6  justify-content-end align-items-center d-flex term-image">
                    <img src="~/IMAGES/image-1.jpg" alt="" />
                </div>
            </div>
            <!--term1 end-->
            <!--term2 start-->
            <div class="row d-flex justify-content-center align-items-center r-term">
                <div class="col-md-6  justify-content-start align-items-center d-flex term-image">
                    <img src="~/IMAGES/image-2.jpg" alt="" />
                </div>
                <div class="col-md-6 term-detail">
                    <h3 class=" justify-content-center justify-content-md-start align-items-center d-flex term-heading">
                        Get service requests
                    </h3>
                    <p class="justify-content-center justify-content-md-start align-items-center d-flex term-text">
                        You will get service requests from
                        customes depend on service area and profile.
                    </p>
                    <a href="#" class="justify-content-center justify-content-md-start align-items-center d-flex readmore">
                        Read More &nbsp; <img src="~/IMAGES/right arrow-black.png" alt="">
                    </a>
                </div>

            </div>
            <!--term2 end-->
            <!--term3 start-->
            <div class="row d-flex justify-content-center align-items-center r-term">
                <div class="col-md-6 term-detail">
                    <h3 class=" justify-content-center justify-content-md-start align-items-center d-flex term-heading">
                        Complete service
                    </h3>
                    <p class="justify-content-center justify-content-md-start align-items-center d-flex term-text">
                        Accept service requests from your customers
                        and complete your work.
                    </p>
                    <a href="#" class="justify-content-center justify-content-md-start align-items-center d-flex readmore">
                        Read More &nbsp; <img src="~/IMAGES/right arrow-black.png" alt="">
                    </a>
                </div>
                <div class="col-md-6  justify-content-end align-items-center d-flex term-image">
                    <img src="~/IMAGES/image-3.jpg" alt="" />
                </div>
            </div>
            <!--term3 end-->

        </div>
    </section>
    <!--registration work code end-->
    <!-- buttons code start -->
    <section id="customer">
        <div class="row" id="row3">

            <div class="col-md-1">
                <div id="foma-container">
                    <a href="#nav_section">
                        <img class="img-fluid" src="~/IMAGES/forma-5.png" alt="" id="foma-5">
                    </a>
                </div>
            </div>

            <div class="col-md-10">
                <div class="container-fluid mx-0 px-0">

                    <div class="helperland-heading">
                        <h4 class="text-center button-title">GET OUR NEWSLETTER</h4>
                    </div>

                    <div class="row justify-content-center email-submit">
                        <div class="col-sm-auto p-0 newletter-input">
                            <input class="form-control" type="email" name="" id="" placeholder="YOUR EMAIL">
                        </div>
                        <div class="col-sm-1 py-2 py-sm-0 newletter-input">
                            <button class="btn" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-1 text-center">
                <img class="img-fluid" src="~/IMAGES/layer-598.png" height="63px" width="63px" alt="">
            </div>

        </div>
    </section>


    <!-- buttons code end -->
    
    <!-- javascript code start-->
    <script src="~/Javascript/bootstrap.bundle.min.js"></script>
    <script src="~/Javascript/main.js"></script>
    <!--javasrcipt code end-->
</body>
</html>


