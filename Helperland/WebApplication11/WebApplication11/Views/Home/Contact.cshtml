    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!--External CSS-->
    <link href="~/css/Contact.css" rel="stylesheet" />


    <title>Contact</title>


</head>

<body>
    <!--header code start-->
    <header id="contact_section">

        <nav class="navbar navbar-expand-lg navbar-fixed-top ">
            <div class="container-fluid ">
                <a asp-action="Index" class="navbar-brand">
                    <img src="~/IMAGES/logo.png" height="28" alt="CoolBrand" />
                </a>
                <button class="navbar-toggler ddmenu" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/IMAGES/list.svg" alt="List" width="50px" height="50px">

                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                    <div class="navbar-nav text-light">
                        <a asp-action="Book_service" class="nav-item nav-link menu menu1">Book Now</a>
                        <a asp-action="Price" class="nav-item nav-link menu">Prices & Services</a>
                        <a href="#" class="nav-item nav-link menu">Warranty</a>
                        <a href="#" class="nav-item nav-link menu">Blog</a>
                        <a asp-action="Contact" class="nav-item nav-link menu">Contact</a>
                        <button class="nvbarbtn">Login</button>
                        <a asp-action="provider" id="nvbarbtn" class="nvbarbtn">Become a Helper </a>

                        @*<button class="nvbarbtn">Become a Helper</button>*@
                    </div>
                </div>
            </div>
        </nav>
        <div>
            <img src="~/IMAGES/bg-image.png" class="img-fluid bg" />
        </div>
    </header>
    <!--header code end-->
    <!--middle code start-->
    <section class="contact">
        <div class="contact-heading1">
            <h1 class="text-center">Contact us</h1>
        </div>
        <div class="d-flex star justify-content-center">
            <img src="~/IMAGES/star.png" alt="" />
        </div>

        <div class="contact-details d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <div class="contact-icon d-flex justify-content-center align-items-center">
                    <img src="~/IMAGES/location.svg" alt="" />
                </div>
                <div class="text-center icon-text">
                    <p>1111 Lorem ipsum text 100,<br> Lorem ipsum AB</p>
                </div>
            </div>

            <div>
                <div class="contact-icon d-flex justify-content-center align-items-center">
                    <img src="~/IMAGES/phone-call.png" alt="" />
                </div>
                <div class="text-center icon-text">
                    <p>+49 (40) 123 56 7890 <br> +49 (40) 987 56 0000</p>
                </div>
            </div>

            <div>
                <div class="contact-icon d-flex justify-content-center align-items-center">
                    <img src="~/IMAGES/sms.png" alt="" />
                </div>
                <div class="text-center icon-text">
                    <p>info@helperland.com</p>
                </div>
            </div>


        </div>

        <div class="d-flex justify-content-center align-items-center">
            <hr / class="line">
        </div>

    </section>
    <!--middle code end-->
    <!--form code-->
    <section class="contact-form" id="contact-form">
        <div class=" contact-title  justify-content-center align-items-center">
            <div class="form-heading">
                <h2 class="text-center">Get in touch with us</h2>
            </div>
            <div class=" contact-table container justify-content-center align-items-center">
                <form>
                    <table>
                        <tr>
                            <td>
                                <input type="text" id="fname" placeholder="First name" />
                            </td>
                            <td>
                                <input type="text" id="lname" placeholder="Last name" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="number" id="mnumber" placeholder="Mobile number" />
                            </td>
                            <td>
                                <input type="text" id="" placeholder="Email address" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <select>
                                    <option selected>Subject</option>
                                    <option>A</option>
                                    <option>B</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <textarea placeholder="Message"></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button type="button" id="" class="contact-btn">Submit</button>
                            </td>
                        </tr>
                    </table>

                </form>
            </div>
        </div>


    </section>

    <div class="map-image">
        <img src="~/IMAGES/map.png" alt="map" />
    </div>

    <!-- buttons code start -->
    <section id="customer">
        <div class="row" id="row3">

            <div class="col-md-1">
                <div id="foma-container">
                    <a href="#contact_section">
                        <img class="img-fluid" src="~/IMAGES/forma-5.png" alt="" id="foma-5">
                    </a>
                </div>
            </div>

            <div class="col-md-10">
                <div class="container-fluid mx-0 px-0">

                    <div class="helperland-heading">
                        <h4 class="text-center button-title">GET OUR NEWSLETTER</h4>
                    </div>

                    <div class="row justify-content-center email-submit">
                        <div class="col-sm-auto p-0 newletter-input">
                            <input class="form-control" type="email" name="" id="" placeholder="YOUR EMAIL">
                        </div>
                        <div class="col-sm-1 py-2 py-sm-0 newletter-input">
                            <button class="btn" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-1 text-center">
                <img class="img-fluid" src="~/IMAGES/layer-598.png" height="63px" width="63px" alt="">
            </div>

        </div>
    </section>

